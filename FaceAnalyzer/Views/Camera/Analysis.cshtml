@model FaceAnalyzer.Models.FaceAttributesViewModel
@{
    //Layout = null;
    ViewData["Title"] = "Analysis";
}

<h1 class="display-4">Análisis</h1>
<br/>
<div class="row">
    <div class="col-md-4 col-sm">
        <div class="panel panel-default">
            <div class="panel-heading">Fotografía:</div>
            <div class="panel-body">
                <div id="analysis">
                    @{
                        <br />
                        <p><img src="@Url.Content(@Model.Image)" alt="img" /></p>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm">
        <div class="panel panel-default">
            <div class="panel-heading">Resultado del análisis de la imagen:
            <div class="panel-body">
                <div id="analysis">
                    <br />
                    @{
                        if (Model.Age == -1)
                        {
                            <p><b>No se ha detectado ningún rostro en la imagen.</b></p>
                            <p><b>Intenta sacar otra foto.</b></p>
                        }
                        else
                        {
                            if (!String.IsNullOrEmpty(Model.Gender))
                            {
                                <p>@Html.DisplayNameFor(model => model.Gender): <b>@Model.Gender</b></p>
                            }
                            if (Model.Age != null)
                            {
                                <p>@Html.DisplayNameFor(model => model.Age): <b>@Model.Age</b></p>
                            }
                            if (!String.IsNullOrEmpty(Model.Gender) && Model.Gender == "Mujer")
                            {
                                <p>@Html.DisplayNameFor(model => model.Makeup): <b>@Model.Makeup</b></p>
                            }
                            if (!String.IsNullOrEmpty(Model.Gender) && Model.Gender == "Hombre")
                            {
                                <p>@Html.DisplayNameFor(model => model.FacialHair): <b>@Model.FacialHair</b></p>
                            }
                            if (!String.IsNullOrEmpty(Model.Smile))
                            {
                                <p>@Html.DisplayNameFor(model => model.Smile): <b>@Model.Smile</b></p>
                            }
                            if (!String.IsNullOrEmpty(Model.Glasses))
                            {
                                <p>@Html.DisplayNameFor(model => model.Glasses): <b>@Model.Glasses</b></p>
                            }
                            if (!String.IsNullOrEmpty(Model.Hair))
                            {
                                <p>@Html.DisplayNameFor(model => model.Hair): <b>@Model.Hair</b></p>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm"></div>
    </div>
</div>


